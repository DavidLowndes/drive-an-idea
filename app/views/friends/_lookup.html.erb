<div class="row">
  <div id="friend-lookup">
    <h3 align="center">Search for Friends</h3>
    <%= form_tag search_friends_path, remote: true, method: :get,
                                      id: 'friend-lookup-form' do %>
      <div class="form-group text-center">
        <div class="col-md-9">
          <%= text_field_tag :search_param, params[:search_param], 
                             placeholder: "First name, Last name or Email",
                             autofocus: true, 
                             class: 'form-control search-box' %>
        </div>
        <div class="col-md-2">
          <%= button_tag(type: :submit, class: "btn btn-success") do %>
            <i class="fa fa-search"></i> Look up a friend
          <% end %>
        </div>
      </div>
    <% end %>
    
    <%= render 'common/spinner' %>
    
    <% if @users %>
      <% if @users.size > 0 %>
        <h3 align="center">Search Results</h3>
        <br>
        <div id="friend-lookup-results" class="well results-block">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th colspan=2>Actions</th>
              </tr>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.full_name == user.email ? '-' : user.full_name %>
                  </td>
                  <td><%= user.email %></td>
                  <td>
                    <%= link_to "View Profile",
                        user_path(user), class: "btn btn-xs btn-success" %>
                  </td>
                  <td>
                    <% if current_user.not_friends_with?(user.id) %>
                      <%= link_to "Add as my friend ",
                          add_friend_path(user: current_user, friend: user),
                          class: "btn btn-xs btn-success", method: :post %>
                    <% else %>
                      <span class="btn btn-xs btn-success disabled">
                        You are friends.
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class ="lead col-md-12">
          No people match this search criteria
        </p>
      <% end %>
    <% end %>
    <div id="friend-lookup-errors"></div>
  </div>
</div>
