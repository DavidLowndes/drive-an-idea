<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="4">
          <h4 align="center" class="no-padding">Your Subscriptions</h4>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "View Profile", user_path(friend),
                                        class: "btn btn-primary btn-xs" %>
          </td>
          <td>
            <%= link_to 'Unsubscribe',
                friendship_path(friend),
                method: :delete,
                data: { 
                  confirm: 'Are you sure you want to unsubscribe'
                },
                class: 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class='row'>
    <p class="lead text-center">
      You don't follow anybody yet.
    </p>
  </div>
<% end %>