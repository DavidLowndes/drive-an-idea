<div class="well">
  <% if @friendships.size > 0 %>
    <table class="table table-striped text-center">
      <thead>
        <tr>
          <th colspan="5" class="no-padding">
            <h4 align="center" class="no-padding">Your Subscriptions</h4>
          </th>
        </tr>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Ideas</th>
          <th>Profile</th>
          <th>Unsubscribe</th>
        </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friend| %>
          <tr>
            <td>
              <%= friend.full_name == friend.email ? "-" : friend.full_name %>
            </td>
            <td><%= friend.email %></td>
            <td><%= Idea.where(user: friend).count %></td>
            <td>
              <%= link_to "View Profile", user_path(friend),
                                          class: "btn btn-primary btn-xs" %>
            </td>
            <td>
              <%= link_to 'Unsubscribe',
                  friendship_path(friend),
                  method: :delete,
                  class: 'btn btn-xs btn-default' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="lead text-center no-margin">
      You aren't following anybody at the moment.
    </p>
  <% end %>
</div>