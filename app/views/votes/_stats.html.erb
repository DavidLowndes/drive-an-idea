<% if @idea.closed? %>
  <h6 align="center">[ This idea is closed, and can no longer be voted on ]</h6>
<% end %>

<%# Check if votes should be displayed %>
<% if @idea.real_time_voting? || @idea.closed? || @idea.user == current_user %>

  <h4 align="center">Voting Stats</h4>
  <% if @idea.votes.any? %>
    <%# Display votes trends %>
    <%= render 'votes/results' %>
    
    <%# If votes aren't anonymous, reveal them %>
    <% if @idea.reveal_voter_details? %>
      <br>
      <%= render 'votes/details' %>
    <% end %>
    
  <% else %>
    <%# There are no votes yet %>
    <p class="text-center">
      There are no votes to show.
    </p>
  <% end %>
  
<% else %>
  <%# Votes are hidden %>
  <h5 class="text-center">
    [ Votes are currently hidden for this idea ]
  </h5>
<% end %>
