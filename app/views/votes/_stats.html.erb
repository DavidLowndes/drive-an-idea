<h4 align="center">Voting Stats</h4>

<% if @idea.show_votes? || @idea.user == current_user || @idea.closed? %>

  <% if @idea.votes.any? %>
    <%# Display votes trends %>
    <%= render 'votes/trends' %>
    
    <%# If votes aren't anonymous %>
    <% if !@idea.anonymous_votes? %>
      <br>
      <%= render 'votes/details' %>
    <% end %>
    
  <% else %>
    <%# There are no votes yet %>
    <p class="text-center">
      No votes! Please vote on this idea.
    </p>
  <% end %>
  
<% else %>
  <%# Votes are hidden %>
  <p class="text-center">
    [ Votes are currently hidden for this idea ]
  </p>
<% end %>
