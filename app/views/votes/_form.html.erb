<% @idea = obj %>

<% case @idea.voting_style 
   when 'Binary' %>

  <%= form_for([@idea, Vote.new]) do |f| %>
    <div align="center" class="form-group vote-form-group">
      <%= button_tag type: 'submit', name: 'value', value: 0, 
                         class: 'btn btn-lg btn-danger' do %>
        <i class="fa fa-thumbs-o-down fa-lg" aria-hidden="true"></i>
      <% end %>
      
      <%= button_tag type: 'submit', name: 'value', value: 1, 
                         class: 'btn btn-lg btn-primary' do %>
        <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>

<% when '1-10' %>  
  
  <%= form_for([@idea, Vote.new]) do |f| %>
    <% values = (1..10).to_a %>
    <div align="center" class="form-group vote-form-group">
      <% values.each do |value| %>
        <%= f.submit "#{value}", name: 'value', value: value,
                                 class: 'btn btn-lg btn-info' %>
      <% end %>
    </div>
  <% end %>
  
<% when '5 Stars' %>

  <%= form_for([@idea, Vote.new]) do |f| %>
  
    <% values = (1..5).to_a %>
    <div align="center" class="form-group vote-form-group">
      <% values.each do |value| %>
        <%= f.submit "#{value}", name: 'value', value: value,
                                 class: 'btn btn-lg btn-warning' %>
      <% end %>
    </div>
  <% end %>

<% when 'Fibonacci' %>

  <%= form_for([@idea, Vote.new]) do |f| %>
    <% values = [1, 2, 3, 5, 8, 13, 21] %>
    <div align="center" class="form-group vote-form-group">
      <% values.each do |value| %>
      <%= f.submit "#{value}", name: 'value', value: value,
                               class: 'btn btn-lg btn-info' %>
      <% end %>
    </div>
  <% end %>    
<% else %>

  <h2>Unrecognisable voting style, please delete and resubmit your idea.</h2>

<% end %>
