<div class ="container-fluid">	
	<h4 align="center">
		<div class="col-md-offset-1 col-md-6 comments-input">
			<div class ="row well col-md-6 col-md-offset-1">
				<div class = "scroller">
					<strong>Add a comment:</strong>
					<%= form_for([@idea, @idea.comments.build]) do |f| %>
						<p>
							<%= f.text_area :body %>
						</p>
						<p>
							<%= f.submit %>
						</p>
					<% end %>
				</div>
			</div>
		</div>
	</h4>
</div>