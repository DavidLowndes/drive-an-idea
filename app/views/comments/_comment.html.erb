<% if comment.id.present? %>
  <%# Wrapping bubble %>
  <div class="row row-comment">
    <div class="bubble trix-body
                <%= 'yours' if comment.user == current_user %>">

      <%# Comment text %>
      <%= comment.body.html_safe %>
      
      <%# Delete cross %>
      <% if comment.user == current_user %>
        <div class="delete-comment-button">
          <%= link_to [comment.idea, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } do %>
            <i class="fa fa-times fa-2x" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    
      <small> 
        <% if !@idea.anonymous_comments? %>
          <strong>
            <%# Commenter name (or email) %>
            <%= comment.user.full_name %>
          </strong> -
        <% end %>
        <%# Comment timestamp %>
        <%= comment.created_at.to_formatted_s(:short) %>
      </small>
    </div>
  </div>

<% end %>
