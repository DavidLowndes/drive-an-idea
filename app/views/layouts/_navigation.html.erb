<div class="navbar navbar-default navbar-static-top">
  <div class="container">
	  <%= link_to 'Drive An Idea', root_path, id: 'logo', 
	  class: "navbar-brand" %>
      
  	<% if current_user %> 
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <!-- Left Navbar -->
        <ul class="nav navbar-nav">
          <li><%= link_to 'New Idea', new_idea_path %></li>
            <li class="dropdown text-right"><!-- Dropdown Idea Menu-->
              <!-- Dropdown Link -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                 role="button" aria-haspopup="true" aria-expanded="false">
                View Ideas
                <span class="caret"></span>
              </a>
              <!-- Dropdown Content -->
              <ul class="dropdown-menu"> 
                <li>
                  <%= link_to ideas_path do %>
                    <i class="fa fa-clock-o fa-fw" aria-hidden="true"></i>
                    Most Recent Ideas
                  <% end %>
                </li>
                <li>
                  <% alert_count = current_user.alerts.where(active: 1).count %>
                  <%= link_to alerted_ideas_path, disabled: true do %>
                    <i class="fa fa-exclamation fa-fw" aria-hidden="true"></i>
                    Alerted Ideas (<%= alert_count %>)
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to followed_ideas_path do %>
                    <i class="fa fa-bell-o fa-fw" aria-hidden="true"></i>
                    Ideas You're Following
                  <% end %>
                </li>
                <li>
                  <%= link_to not_followed_ideas_path do %>
                    <i class="fa fa-bell-slash-o fa-fw" aria-hidden="true"></i>
                    Ideas You Aren't Following
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to open_ideas_path do %>
                    <i class="fa fa-dot-circle-o fa-fw" aria-hidden="true"></i>
                    Open Ideas
                  <% end %>
                </li>
                <li>
                  <%= link_to closed_ideas_path do %>
                    <i class="fa fa-minus-circle fa-fw" aria-hidden="true"></i>
                    Closed Ideas
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to escalated_ideas_path do %>
                    <i class="fa fa-arrow-up fa-fw" aria-hidden="true"></i>
                    Escalated Ideas
                  <% end %>
                </li>
                <li>
                  <%= link_to discarded_ideas_path do %>
                    <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
                    Discarded Ideas
                  <% end %>
                </li>
              </ul>
            </li><!-- /dropdown -->
          <li><%= link_to 'Subscriptions', my_friends_path %></li>
        </ul>
        
        <!-- Right Navbar -->
        <ul class="nav navbar-right col-md-3">
          
          <!-- Dropdown User Menu-->
          <li class="dropdown user-dropdown text-right">
            <!-- Dropdown Link -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <% if current_user.admin? %>
                <i class="fa fa-wrench fa-lg fa-fw" aria-hidden="true"></i>
              <% end %>
              <%= current_user.full_name %>
              <span class="caret"></span>
            </a>

            <!-- Dropdown Content -->
            <ul class="dropdown-menu">
              <li>
                <%= link_to my_area_path do %>
                  <i class="fa fa-sitemap fa-fw" aria-hidden="true"></i>
                  My Area
                <% end %>
              </li>
              <li>
                <%= link_to my_ideas_path do %>
                  <i class="fa fa-list-ul fa-fw" aria-hidden="true"></i>
                  My Ideas
                <% end %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to edit_user_option_path(current_user.user_option) do %>
                  <i class="fa fa-cog fa-fw" aria-hidden="true"></i>
                  User Options
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path(current_user) do %>
                  <i class="fa fa-user-circle-o fa-fw" aria-hidden="true"></i>
                  Edit Account Details
                <% end %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>
                  Log Out
                <% end %>
              </li>
              <% if current_user.admin? %>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to refresh_follows_path, data: { confirm: 'Don\'t run this unless you know what it\'s going to do - Dave' } do %>
                    <i class="fa fa-wrench fa-fw" aria-hidden="true"></i>
                    Refresh Follows
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li><!-- /dropdown -->

        </ul>
      </div>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      </ul>
    <% end %>
  </div>
</div>