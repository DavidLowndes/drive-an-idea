<div class="row">
  <div class="well col-md-offset-1 col-md-10">
    <h1 align="center" class="margin-bottom"><%= @company.company_name %></h1>
    
    <div class='row'>
      <div class='col-md-6'>
        <p>Company Name: <b><%= @company.company_name %></b></p>
        <p>Company Created At: <b><%= @company.created_at.try(:strftime, '%c') %></b></p>
      </div>
    </div>
    
    <div class='row'>
      <div class='col-md-6'>
        <p>Users in <%= @company.company_name %>:</p>        
          <ul>
            
            <% if @users.first.nil? %>
              <li>No Users!</li>
              
            <% else %>
              <% @users.each do |user| %>
                <li><%= user.first_name %> <%= user.last_name %></li>
              <% end %>
              
            <% end %>  
          </ul>        
      </div>
      <% if current_user.admin? %>
        <div class='col-md-6' align='right'>
          <%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-md btn-success' %>
          <%= link_to 'Delete', company_path(@company), method: :delete, class: 'btn btn-md btn-danger', data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>