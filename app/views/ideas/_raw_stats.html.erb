<!-- advanced-stats modal -->
<div id="raw-stats" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lgs">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <!-- Close modal button -->
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h3 align="center" class="modal-title">
          Raw Developer Statistics
        </h3>
      </div>
      <!-- Voting buttons -->
      <div class="modal-body">
        <div class="advanced-stats">
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Raw Text:</strong>
            </div>
            <div class="col-md-8"><%= @idea.text %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Created by:</strong>
            </div>
            <div class="col-md-8">
              <%= @idea.user.full_name %> (ID: <%= @idea.user_id %>)
            </div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Created At:</strong>
            </div>
            <div class="col-md-8"><%= @idea.created_at %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Last Updated At:</strong>
            </div>
            <div class="col-md-8"><%= @idea.updated_at %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Open Days:</strong>
            </div>
            <div class="col-md-8"><%= @idea.open_days %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Closing Time:</strong>
            </div>
            <div class="col-md-8"><%= @idea.closing_time %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Open?</strong>
            </div>
            <div class="col-md-8"><%= @idea.open? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Closed?</strong>
            </div>
            <div class="col-md-8"><%= @idea.closed? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Forced Closed?</strong>
            </div>
            <div class="col-md-8"><%= @idea.force_close? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Final Verdict:</strong>
            </div>
            <div class="col-md-8"><%= @idea.final_verdict %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Voting Style:</strong>
            </div>
            <div class="col-md-8"><%= @idea.voting_style %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Anonymous Comments?</strong>
            </div>
            <div class="col-md-8"><%= @idea.anonymous_comments? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Real-time Voting?</strong>
            </div>
            <div class="col-md-8"><%= @idea.real_time_voting? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Reveal Voter Details?</strong>
            </div>
            <div class="col-md-8"><%= @idea.reveal_voter_details? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Results Viewable?</strong>
            </div>
            <div class="col-md-8"><%= @idea.results_viewable? %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Number of Comments:</strong>
            </div>
            <div class="col-md-8"><%= @idea.comments.count %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Number of Votes:</strong>
            </div>
            <div class="col-md-8"><%= @idea.votes.count %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Number of Follows:</strong>
            </div>
            <div class="col-md-8"><%= @idea.follows.count %></div>
          </div>
          <div class="row stat-group">
            <div class="col-md-4 text-right">
              <strong>Number of Active Alerts:</strong>
            </div>
            <div class="col-md-8">
              <%= @idea.alerts.where(active: 1).count %>
            </div>
          </div>
        </div>
      </div>
    </div><!-- /content -->
  </div>
</div><!-- /vote-form modal -->