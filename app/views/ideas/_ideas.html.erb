<% obj.each do |idea| %>

  <%# INDEX VIEW %>
  <div class="row well col-md-10 col-md-offset-1">
    <%# Alert Notification %>
    <% if current_user.alerts.where(idea: idea, active: 1).exists? %>
      <i class="fa fa-exclamation fa-2x exclamation" aria-hidden="true">
      </i>
    <% end %>
    
    <%# Idea Body %>
    <div class="trix-body idea-scroller">
      <%= link_to idea.text.html_safe, idea_path(idea) %>
    </div>
    
    <%# Idea Details %>
    <p class="idea-details" align="center">
      <small>
        This idea is
        <% if idea.open? %>
          <strong class="green">OPEN</strong>,
          and will close in 
          <%= time_ago_in_words(idea.closing_time) %>.
        <% else %>
          <strong class="red">CLOSED.</strong>
        <% end %>
        <% if idea.final_verdict != "Undecided" %>
          It has been
          <strong class=
            "<%= idea.final_verdict == 'Escalated' ? "green" : "red" %>">
            <%= idea.final_verdict.upcase %>.
          </strong>
        <% end %>
        <br>
        This idea was created by
        <strong>
          <%= link_to idea.user.full_name, user_path(idea.user) %>.
        </strong>
        <% if idea.open? %>
          <br>
          <% if Follow.where(user: current_user, idea: idea).any? %>
            You are following this idea.
          <% else %>
            You aren't following this idea.
          <% end %>
        <% end %>
      </small>
    </p>
  </div>
<% end %>