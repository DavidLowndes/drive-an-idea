<!-- <p id="notice"><%= notice %></p> -->
<div class="row">
  <p>
    <strong>Text:</strong>
    <%= @idea.text %>
  </p>
  <p>
    <strong>User:</strong>
    <%= @idea.user.full_name %>
  </p>
  <p>
    <strong>Voting Style:</strong>
    <%= @idea.voting_style %>
  </p>
  
  <%= link_to 'Edit', edit_idea_path(@idea) %> |
  <%= link_to 'Delete', idea_path(@idea), method: :delete %>

</div>

<!-- Show voting form -->
<%= render 'votes/form', obj: @idea %>
<!-- Show voting stats -->
<%= render 'votes/stats' %>

<h2>Comments</h2>
<%= render @idea.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
