<div class=activity>
  <li class="list-group-item">
    <span class="glyphicon glyphicon-asterisk"></span>
    <% if a.trackable %>
      <small class="text-muted"> An Idea was updated by <%= a.owner.full_name %> <%= time_ago_in_words(a.updated_at) %> ago.</small>
      <%= link_to a.trackable.text.html_safe, idea_path(a.trackable) %> 
    <% else %>
     An Idea that has now been deleted was updated 
     <small class="text-muted">By <%= link_to a.owner.full_name, user_path(a.owner) %> <%= time_ago_in_words(a.created_at) %> ago.</small>
    <% end %>
  </li>
</div>